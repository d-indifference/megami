{{> head}}

{{> admin_nav }}

<div class='container-fluid mt-3'>

	{{> admin_offcanvas }}

	<div class='row mt-3 mt-lg-0'>
		<div class='col-lg-3 d-lg-block d-none'>
			{{> admin_menu}}
		</div>
		<div class='col'>

			<h2 class='mb-3'>New Ban</h2>

			<form action='/megami/moderation/ban' method='post'>
				<div class="mb-3">
					<label for="newBanId" class="form-label">Banned IP address</label>
					<input
						name='ip'
						type="text"
						class="form-control"
						id="newBanIp"
						value='{{ ip }}'
					>
				</div>
				<div class="mb-3">
					<label for="newBanIp" class="form-label">Banned post ID</label>
					<input
						name='postId'
						type="text"
						class="form-control"
						id="newBanId"
						value='{{ postId }}'
					>
				</div>
				<div class='mb-3'>
					<label for="newBanTill" class="form-label">Ban till</label>
					<input
						name='banTill'
						type="date"
						class="form-control"
						id="newBanTill"
						value='{{ banTill }}'
					>
				</div>
				<div class="mb-3">
					<label for="newBanReason" class="form-label">Reason of ban</label>
					<textarea
						name='reason'
						class="form-control"
						id="newBanReason"
						rows="3"
						aria-describedby='newBanReasonHelp'
					></textarea>
					<div id="newBanReasonHelp" class="form-text">You can leave this field empty</div>
				</div>
				<div class='mb-3'>
					<fieldset>
						<legend>Select an option:</legend>
						<div class='form-check'>
							<input
								name='deleteOption'
								value='NOTHING'
								class="form-check-input"
								type="radio"
								id="radioBtnOption1"
							>
							<label class="form-check-label" for="radioBtnOption1">
								Nothing, only ban
							</label>
						</div>
						<div class='form-check'>
							<input
								name='deleteOption'
								value='THIS_POST'
								class="form-check-input"
								type="radio"
								id="radioBtnOption2"
								checked
							>
							<label class="form-check-label" for="radioBtnOption2">
								Delete this post
							</label>
						</div>
						<div class='form-check'>
							<input
								name='deleteOption'
								value='THIS_FILE'
								class="form-check-input"
								type="radio"
								id="radioBtnOption3"
							>
							<label class="form-check-label" for="radioBtnOption3">
								Delete this file
							</label>
						</div>
						<div class='form-check'>
							<input
								name='deleteOption'
								value='ALL_POSTS'
								class="form-check-input"
								type="radio"
								id="radioBtnOption4"
							>
							<label class="form-check-label" for="radioBtnOption4">
								Delete all posts from this IP address
							</label>
						</div>
						<div class='form-check'>
							<input
								name='deleteOption'
								value='ALL_FILES'
								class="form-check-input"
								type="radio"
								id="radioBtnOption5"
							>
							<label class="form-check-label" for="radioBtnOption5">
								Delete all files from this IP address
							</label>
						</div>
					</fieldset>
				</div>

				<button type='submit' class='btn btn-primary'>Ban this IP</button>
			</form>

		</div>
	</div>
</div>

<script src='/js/megami-dashboard.js'></script>

{{> eof}}
