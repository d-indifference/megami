{{> head}}

{{> back_to_board_navbar }}

<div class='container'>
	<h1 class='mt-3 mb-5'>New Thread in /{{ board.slug }}/</h1>

	<form action='/{{ board.slug }}/new-thread' method='post' enctype="multipart/form-data">
		<div class="mb-3">
			<label for="newThreadEmail" class="form-label">Email</label>
			<input type="email" name='email' class="form-control" id="newThreadEmail">
		</div>
		<div class="mb-3">
			<label for="newThreadName" class="form-label">Name</label>
			<input type="text" name='name' class="form-control" id="newThreadName">
		</div>
		<div class="mb-3">
			<label for="newThreadSubject" class="form-label">Subject</label>
			<input type="text" name='subject' class="form-control" id="newThreadSubject">
		</div>
		<div class="mb-3">
			<label for="newThreadComment" class="form-label">Comment</label>
			<textarea class="form-control" name='comment' id="newThreadComment" rows="3" required></textarea>
		</div>
		<div class="mb-3">
			<label for="newThreadFile" class="form-label">File</label>
			<input class="form-control" name='file' type="file" id="newThreadFile">
		</div>
		<div class="mb-3 col-3">
			<label for="newThreadPassword" class="form-label">Password</label>
			<input type="password" name='password' class="form-control" id="newThreadPassword" required>
		</div>
		<div class="form-check">
			<input class="form-check-input" name='stayIn' type="checkbox" id="newThreadNoko" checked>
			<label class="form-check-label" for="newThreadNoko">Noko (stay in thread)</label>
		</div>
		<div class='mt-3'>
			<button type="submit" class="btn btn-primary mb-3">Submit</button>
		</div>
	</form>

</div>

{{> eof}}
