<button
	class="btn btn-outline-secondary d-block d-lg-none"
	type="button"
	data-bs-toggle="offcanvas"
	data-bs-target="#mobileSideMenu"
	aria-controls="mobileSideMenu"
>
	Menu
</button>

<div
	class="offcanvas offcanvas-start"
	tabindex="-1"
	id="mobileSideMenu"
	aria-labelledby="mobileSideMenuLabel"
>
	<div class="offcanvas-header">
		<h5 class="offcanvas-title" id="mobileSideMenuLabel">Management menu</h5>
		<button
			type="button"
			class="btn-close"
			data-bs-dismiss="offcanvas"
			aria-label="Close"
		></button>
	</div>
	<div class="offcanvas-body">
		{{> admin_menu}}
	</div>
</div>
